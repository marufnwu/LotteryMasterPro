<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".ui.special_number.SpecialNumberActivity">


    <LinearLayout
        android:id="@+id/coomingSoon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="থেকে চালু হবে"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This function will start on"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 01-10-2021"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/red"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="यह समारोह"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 01-10-2021 "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="से शुरू होगा"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>


    <ScrollView

        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/specialNumberLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/ivPremBanner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"/>


                <TextView
                    android:id="@+id/upload_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="08-06-2021"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:background="@color/purple_700"
                    android:layout_marginBottom="@dimen/_10sdp"
                    tools:ignore="MissingConstraints" />



                <TextView
                    android:id="@+id/numberOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/special_number_box"
                    android:drawableLeft="@drawable/ic_flower_left"
                    android:drawableRight="@drawable/ic_flower_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:shadowColor="@color/lightGray"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/numberTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/special_number_box"
                    android:drawableLeft="@drawable/ic_flower_left"
                    android:drawableRight="@drawable/ic_flower_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:letterSpacing="0.1"
                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:shadowColor="@color/lightGray"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/numberThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/special_number_box"
                    android:drawableLeft="@drawable/ic_flower_left"
                    android:drawableRight="@drawable/ic_flower_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:letterSpacing="0.1"
                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:shadowColor="@color/lightGray"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/numberFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/special_number_box"
                    android:drawableLeft="@drawable/ic_flower_left"
                    android:drawableRight="@drawable/ic_flower_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:shadowColor="@color/lightGray"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/numberFive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/special_number_box"
                    android:drawableLeft="@drawable/ic_flower_left"
                    android:drawableRight="@drawable/ic_flower_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:shadowColor="@color/lightGray"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/numberSix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/special_number_box"
                    android:drawableLeft="@drawable/ic_flower_left"
                    android:drawableRight="@drawable/ic_flower_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:shadowColor="@color/lightGray"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/numberSeven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/special_number_box"
                    android:drawableLeft="@drawable/ic_flower_left"
                    android:drawableRight="@drawable/ic_flower_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:shadowColor="@color/lightGray"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/numberEight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/special_number_box"
                    android:drawableLeft="@drawable/ic_flower_left"
                    android:drawableRight="@drawable/ic_flower_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:shadowColor="@color/lightGray"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/numberNine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/special_number_box"
                    android:drawableLeft="@drawable/ic_flower_left"
                    android:drawableRight="@drawable/ic_flower_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:shadowColor="@color/lightGray"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/numberTen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/special_number_box"
                    android:drawableLeft="@drawable/ic_flower_left"
                    android:drawableRight="@drawable/ic_flower_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:shadowColor="@color/lightGray"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/standerdLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/service_plan_backg"
                    android:layout_height="match_parent" >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ytthumbail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="@dimen/_200sdp"
                            android:adjustViewBounds="true"/>

                        <com.skyfishjy.library.RippleBackground
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/content"
                            app:rb_color="#636200EE"
                            android:layout_gravity="center"
                            app:rb_radius="@dimen/_15sdp"
                            app:rb_rippleAmount="4"
                            app:rb_duration="3000"
                            app:rb_scale="6">
                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_centerInParent="true"
                                android:id="@+id/centerImage"
                                android:src="@drawable/ic_baseline_play_circle_outline_24"/>
                        </com.skyfishjy.library.RippleBackground>

                    </FrameLayout>
                    <TextView
                        android:id="@+id/tvInstruction"
                        android:padding="@dimen/_8sdp"
                        android:background="@drawable/border_tv_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paid_service_message"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="#2DFF03"
                        android:justificationMode="inter_word"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/PhoneOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@drawable/service_plan_backg"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/service_plan_backg"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_call_phone"/>
                            <TextView
                                android:id="@+id/pnOne"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginLeft="@dimen/_10sdp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/PhoneTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@drawable/service_plan_backg"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/service_plan_backg"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_call_phone"/>
                            <TextView
                                android:id="@+id/pnTwo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginLeft="@dimen/_10sdp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/PhoneThree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@drawable/service_plan_backg"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/service_plan_backg"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_call_phone"/>
                            <TextView
                                android:id="@+id/pnThree"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginLeft="@dimen/_10sdp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/whatsAppBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/whats_app_icon"
                            android:adjustViewBounds="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:visibility="gone"
        android:id="@+id/spin_kit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_7sdp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/_35sdp"
            android:paddingLeft="@dimen/_35sdp"
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp">
            <ProgressBar
                android:layout_marginBottom="@dimen/_10sdp"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:SpinKit_Color="@color/purple_700" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/adUpArrowBtn"
        android:layout_above="@+id/adLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down_icon"
        android:layout_alignParentRight="true"
        android:background="@drawable/arrow_icon_backg"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:visibility="gone"
        android:paddingRight="@dimen/_5sdp"/>
    <ImageView
        android:id="@+id/adDownArrowBtn"
        android:layout_above="@+id/adLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_up_icon"
        android:layout_alignParentRight="true"
        android:background="@drawable/arrow_icon_backg"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:visibility="gone"
        android:paddingRight="@dimen/_5sdp"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/adLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"/>
        <ImageView
            android:id="@+id/imageBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
    </LinearLayout>

</RelativeLayout>