<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/videoRootlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/Thumbail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:src="@drawable/tutorial_thumb"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:src="@drawable/play_icon"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layoutViewCount"
                    android:padding="@dimen/_8sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/view_count_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtViewCount"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:text="Views: 23939"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>
            <TextView
                android:id="@+id/videoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hellow world Hellow  world Hellow world Hellow world Hellow world Hellow world Hellow worldHellow world"
                android:textStyle="bold"
                android:maxLines="2"
                android:justificationMode="inter_word"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:padding="@dimen/_5sdp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>